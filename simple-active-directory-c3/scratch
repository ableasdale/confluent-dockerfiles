---
version: '3.5'
services:

  zookeeper:
    image: confluentinc/cp-zookeeper:7.2.1
    hostname: zookeeper
    container_name: zookeeper
    restart: always
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000

  kafka0:
    image: confluentinc/cp-server:7.2.1
    hostname: kafka0
    container_name: kafka0
    depends_on:
      - zookeeper
    ports:
      - "9092:9092"
      - "8090:8090"
    environment:
      KAFKA_BROKER_ID: 0
      # Rack Awareness
      # KAFKA_BROKER_RACK: rack-a

      # Zookeeper
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181

      # Mappings / Listeners
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka0:29092,PLAINTEXT_HOST://localhost:9092
      KAFKA_DEFAULT_REPLICATION_FACTOR: 1
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1

      # Metrics Reporting
      KAFKA_METRIC_REPORTERS: io.confluent.metrics.reporter.ConfluentMetricsReporter
      KAFKA_CONFLUENT_METRICS_REPORTER_BOOTSTRAP_SERVERS: kafka0:29092
      KAFKA_CONFLUENT_METRICS_REPORTER_TOPIC_REPLICAS: 1
      KAFKA_CONFLUENT_METRICS_REPORTER_TOPIC_REPLICATION_FACTOR: 1
      # for 5.4.x:
      KAFKA_CONFLUENT_LICENSE_TOPIC_REPLICATION_FACTOR: 1
      # for 6.0.0
      KAFKA_CONFLUENT_BALANCER_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_TRANSACTION_STATE_LOG_MIN_ISR: 1
      KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR: 1
      
      KAFKA_CONFLUENT_METADATA_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_CONFLUENT_METRICS_ENABLE: 'true'
      KAFKA_CONFLUENT_SECURITY_EVENT_LOGGER_EXPORTER_KAFKA_TOPIC_REPLICAS: 1
      KAFKA_LOG4J_LOGGERS: 'log4j.rootLogger=TRACE,kafka.authorizer.logger=DEBUG,io.confluent.security.auth.provider.ldap.LdapGroupManager=TRACE'
      KAFKA_OPTS: -Dsun.security.krb5.debug=true

  control-center:
    image: confluentinc/cp-enterprise-control-center:7.2.1
    hostname: control-center
    container_name: control-center
    depends_on:
      - zookeeper
      - kafka0
    ports:
      - "9021:9021"
    environment:
      CONTROL_CENTER_BOOTSTRAP_SERVERS: 'kafka0:29092'
      #CONTROL_CENTER_STREAMS_CPREST_URL: 'http://kafka0:8090'
      CONTROL_CENTER_REPLICATION_FACTOR: 1
      #CONTROL_CENTER_INTERNAL_TOPICS_PARTITIONS: 1
      #CONTROL_CENTER_METRICS_TOPIC_REPLICATION: 1
      #CONTROL_CENTER_MONITORING_INTERCEPTOR_TOPIC_REPLICATION: 1
      CONTROL_CENTER_REST_AUTHENTICATION_METHOD: BASIC
      CONTROL_CENTER_REST_AUTHENTICATION_REALM: AD-TEST.CONFLUENT.IO
      CONTROL_CENTER_REST_AUTHENTICATION_ROLES: Administrators

      # CONTROL_CENTER_AUTH_RESTRICTED_ROLES: Administrators
      # KAFKA_OPTS: -Djava.security.auth.login.config=./control-center-jaas.conf
      CONTROL_CENTER_LOG4J_LOGGERS: 'log4j.rootLogger=TRACE,kafka.authorizer.logger=DEBUG,io.confluent.security.auth.provider.ldap.LdapGroupManager=TRACE'
      #CONTROL_CENTER_LOG4J_OPTS: -Dlog4j.configuration=./log4j.conf
      CONTROL_CENTER_OPTS: "-Djava.security.auth.login.config=./control-center-jaas.conf"

      control-center-start ./control-center.properties
   